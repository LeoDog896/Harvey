#/bin/sh

#
#   This utility helps setup the development enviorment.
#

# Setup Colors
RED='\033[0;31m'
WHITE='\033[0;97m'
REDBG='\033[0;41m'
GREEN='\033[0;32m'
NC='\033[0m' # No Color

# Install dependancies on the local system
printf "${NC}ðŸ“¦ ${GREEN}Installing developer dependancies to the local system...\n\n"
npm install --only=dev

# Copy the .env.sample to the config folder
if [[ -f "./config/.env" ]]; then
    printf "${GREEN}Config already exists... Skipping.\n\n"
else
    printf "${RED}Config not found...\n\n"
    printf "${NC}ðŸ“‹ ${GREEN}Copying configuration from sample...\n\n"
    cp ./config/.env.sample ./config/.env
fi